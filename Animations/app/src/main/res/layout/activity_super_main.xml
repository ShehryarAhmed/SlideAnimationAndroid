<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logic.tech.animations.SuperMainActivity">

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/SlideActivty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slide To 1 Activity to other Activity"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SlideActivty"
        android:layout_centerHorizontal="true">
        <TextView
        android:id="@+id/txt"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Technexia"
            android:textSize="22sp"
            android:visibility="gone"
        />
        <TextView
            android:id="@+id/txt2"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text=" Portal App"
            android:visibility="invisible"
            />
    </LinearLayout>
</RelativeLayout>
